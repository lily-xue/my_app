<h1 class="text-center">用户列表</h1>
<%= button_to '新建用户', new_user_path, method: :get ,class: "btn btn-primary btn-sm"%>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>姓名</th>
      <th>邮箱</th>
      <th>是否为管理员</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to '查看', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @users %>
</div>
