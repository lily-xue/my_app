<%= form_for(user) do |f| %>
  <% if flash[:notice] %>
    <p class="box notice"> <%= flash[:notice] %> </p>
  <% elsif flash[:error] %>
    <p class="box error"> <%= flash[:error] %> </p>
  <% end %>

<form action="/users" class="new_user" id="new_user" method="post">
  <div class="form-group">
   <label for="name">姓名</label>
   <input type="f.name" class="form-control" id="name" placeholder="姓名">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">邮箱</label>
    <input type="f.email" class="form-control" id="exampleInputEmail1" placeholder="邮箱">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">密码</label>
   <input type="f.password" class="form-control" id="exampleInputPassword1" placeholder="密码">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">确认密码</label>
   <input type="f.password_confirmation" class="form-control" id="exampleInputPassword1" placeholder="确认密码">
  </div>

  <button type="submit" class="btn btn-default">提交</button>
</form>
<% end %>
