<%= form_for(@application) do |f| %>
  <% if flash.now[:notice] %>
    <p class="box notice"> <%= flash[:notice] %> </p>
  <% elsif flash.now[:error] %>
    <p class="box error"> <%= flash[:error] %> </p>
  <% end %>
  <% if !@current_user.is_admin? %>
  <div class="field">
    <%= f.label :请假原因 %>
    <%= f.text_field :application_reasons %>
  </div>
  <% else %>
  <div class="field">
    <%= f.label :管理员备注 %>
    <%= f.text_field :admin_comments %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "提交"%>
  </div>
<% end %>
